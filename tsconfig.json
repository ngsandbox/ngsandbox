{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": ["es6", "dom"]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/**",
    "aot/**",
    "@types/**",
    "**/*-aot.ts"
  ]
}